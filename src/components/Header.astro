---
import Navigation from "@components/Navigation.astro";

interface Props {
  titulo?: string;
}

const { titulo } = Astro.props;
---

<header class="header">
  <nav class="navbar">
    <div class="title">
      <h1>{titulo}</h1>
    </div>

    <Navigation />
  </nav>
  <slot />
</header>

<style>
  .header {
    background-color: rgba(60, 60, 60, 0.5);
    border-radius: 0 0 0.5rem 0.5rem;

    /* fijamos el header */
    position: sticky;
    top: 0;
    z-index: 100;

    /* flex */
    display: flex;
    flex-direction: row;
    justify-items: start;
    align-items: center;

    /* animacion */
    animation: blur-header auto linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes blur-header {
    to {
        backdrop-filter: blur(1rem);
        background-color: transparent;
    }
  }

  .navbar {
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }
  .title {
    flex: 1;

    margin-left: 1.5rem;

    display: flex;
    justify-content: center;
  }
</style>